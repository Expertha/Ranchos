<odoo>
  <data>
    <template id ='odoosv_general_report_pdf'>
      <t t-call="web.html_container">
        <t t-call="web.basic_layout">
          <div class="page" style="font-size: 8pt">
            <style type="text/css">
              .encabezado{text-align: center;}
              .tr-color{
                background-color:lightgray; 
              }
              table{
                border-collapse: collapse;
                empty-cells:hide;
              }
              table td:last-child{
                padding: 0.25px; 
                
              }
              table td:last-child{ 
                 height: 0.5px;
              }
              .footer{
              background-color: black;
              position: fixed;
              bottom: 0;
              width: 100%;
              height: 40px;
              color: white;
              }
              .tabla-resumen {
                table-layout:fixed;
                position:absolute;
                left:200px;
              }
              xxx{
                border-style: double; border-width:4px;
                border-right:none;border-left:none;border-top:none;
              }
              .th1{width:350px; text-size:15; text-align:center;}
              .th2{width:100px;text-size:15; text-align:center;}
              .th3{width:100px; text-size:15; text-align:center;}
              .th4{width:100px; text-size:15; text-align:center;}
              .th5{width:100px; text-size:15; text-align:center;}
              .th6{width:100px; text-size:15; text-align:center;}

              .td1{text-size:15px;}
              .td2{text-size:15px; }
              .td3{text-size:15px; }
              .td4{text-size:15px; }
              .td5{text-size:15px; }
              .td6{text-size:18px; }

            </style>
            <!--Declaracion de variables-->
            <t t-set="month" t-value="int(0)"/>
            <t t-set="year" t-value="int(0)"/>
            <t t-set="company_id" t-value="int(0)"/>
            <t t-set="contador" t-value="null"/>
            <t t-set="company" t-value="null"/>
            <t t-set="mes" t-value="null"/>
            <t t-set="acum" t-value="null"/>
            <t t-set="total1" t-value="float(0.00)"/>
            <t t-set="total2" t-value="float(0.00)"/>
            <t t-set="totaln1" t-value="float(0.00)"/>
            <t t-set="totaln2" t-value="float(0.00)"/>
            <t t-set="totaln3" t-value="float(0.00)"/>

            <!--Fin de declaraciones-->

            <!--Encabezado-->
              <t t-foreach="docs" t-as="o">
                <t t-set="month" t-value="int(data.get('form').get('date_month'))"/>
                <t t-set="year" t-value="int(data.get('form').get('date_year'))"/>
                <t t-set="company_id" t-value="int(data.get('form').get('company_id')[0])"/>
                 <t t-set="acum" t-value="int(data.get('form').get('acum'))"/>
                <t t-set="company" t-value="o"/>


                <div class="encabezado">
                   <h3><center>LOS RANCHOS DE EL SALVADOR, S.A. DE C.V.</center></h3>
                  <h6><center>BALANCE GENERAL DEL MES DE: <span t-esc="o.get_month_str(month)"/> DEL <span t-esc="year"/></center></h6>
                  <h6><center>(Cifras expresadas en dólares de los Estados Unidos de América)</center></h6>
                </div>
              </t>
            <!--Fin encabezado-->
            <table class="table-sm">
                <tr class="tr">
                  <th class="th2"></th>
                  <th class="th1"></th>
                  <th class="th2"></th>
                  <th class="th3"></th>
                </tr>
                <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"><u><strong>ACTIVO</strong></u></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6" style="border:none;"></td>
                </tr>
                 <tr t-foreach="company.get_general_details(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><strong t-esc="c.get('name')"/></td>
                  <td class="td2" style="border:none;"></td>
                  <t t-set="totalc" t-value="c.get('debe') - c.get('haber')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(totalc)"/></td>
                </tr>
                <tr t-foreach="company.get_general_details5(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><span t-esc="c.get('name')"/></td>
                  <t t-set="total" t-value="c.get('debe5') - c.get('haber5')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(total)"/></td>
                  <td class="td1" style="border:none;"></td>
                </tr>
                 <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6"></td>
                </tr>
                 <tr t-foreach="company.get_general_details1(company_id, year, month, acum)" t-as="c">
                 <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><strong t-esc="c.get('name')"/></td>
                  <td class="td2" style="border:none;"></td>
                  <t t-set="totalnc" t-value=" c.get('debe1') - c.get('haber1')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(totalnc)"/></td>
                </tr>
                <tr t-foreach="company.get_general_details6(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><span t-esc="c.get('name')"/></td>
                  <t t-set="total" t-value="c.get('debe6') - c.get('haber6')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(total)"/></td>
                  <td class="td1" style="border:none;"></td>
                </tr>
                 <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6" ></td>
                </tr>
                <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><u><strong>TOTAL ACTIVO</strong></u></td>
                  <t t-set="total" t-value="totalc + totalnc"/>
                  <td class="td6" style="border:none;"></td>
                  <td class="td1" style="border:none;"><xxx><strong t-esc="'{0:,.2f}'.format(total)"/></xxx></td>
                </tr>
                <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6" style="border:none;"></td>
                </tr>
                <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"><u><strong>PASIVO</strong></u></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6" style="border:none;"></td>
                </tr>
                 <tr t-foreach="company.get_general_details2(company_id, year, month, acum)" t-as="c">
                 <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><strong t-esc="c.get('name')"/></td>
                  <td class="td2" style="border:none;"></td>
                  <t t-set="totaln1" t-value=" c.get('debe2') - c.get('haber2')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(totaln1)"/></td>
                </tr>
                <tr t-foreach="company.get_general_details7(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><span t-esc="c.get('name')"/></td>
                  <t t-set="total" t-value=" c.get('debe7') - c.get('haber7')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(total)"/></td>
                  <td class="td1" style="border:none;"></td>
                </tr>
                 <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6"></td>
                </tr>
                <tr t-foreach="company.get_general_details3(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><strong t-esc="c.get('name')"/></td>
                  <td class="td2" style="border:none;"></td>
                  <t t-set="totaln2" t-value="c.get('haber3') - c.get('debe3')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(totaln2)"/></td>
                </tr>
                <tr t-foreach="company.get_general_details8(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><span t-esc="c.get('name')"/></td>
                  <t t-set="total" t-value="c.get('haber8') - c.get('debe8')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(total)"/></td>
                  <td class="td1" style="border:none;"></td>
                </tr>
                 <tr>
                 <td class="td1" style="border:none;"> </td>
                  <td class="td1" style="border:none;"></td>
                  <td class="td2" style="border:none;"></td>
                  <td class="td6"></td>
                </tr>
                <tr t-foreach="company.get_general_details4(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><strong t-esc="c.get('name')"/></td>
                  <td class="td2" style="border:none;"></td>
                  <t t-set="totaln3" t-value="c.get('haber4') - c.get('debe4')"/>
                  <td class="td6" style="border:none;"><span t-esc="'{0:,.2f}'.format(totaln3)"/></td>
                </tr> 
                <tr t-foreach="company.get_general_details9(company_id, year, month, acum)" t-as="c">
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><span t-esc="c.get('name')"/></td>
                  <t t-set="total" t-value="c.get('haber9') - c.get('debe9')"/>
                  '{0:.2f}'.format
                  <td class="td1" style="border:none;"></td>
                </tr>   
                 <tr>
                  <td class="td1" style="border:none;"></td>
                  <td class="td1" style="border:none;"><u><strong>TOTAL PASIVO + CAPITAL</strong></u></td>
                  <t t-set="total1" t-value="totaln1 + totaln2"/>
                  <t t-set="total2" t-value="total1 + totaln3"/>
                  <td class="td6"></td>
                  <td class="td1" style="border:none;"><xxx><strong t-esc="'{0:,.2f}'.format(total2)"/></xxx></td>
                </tr>
            </table>
            
            <!--Contenido de reporte-->
            <!--Tabla resumen-->
            
          </div>

          <footer>
           <div style="text-align:left; position:fixed; top: 900px;">F._______________________</div> 
          </footer>

           <footer>
          <div style="text-align:center; position:fixed; top:1500px;">F._______________________</div> 
           </footer>

            <footer>
          <div style="text-align-right:75%; top:1500px;">F._______________________</div>
           </footer>
        </t>
      </t>
    </template>
  </data>
</odoo>
